<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="space" type="com.spacemagical.spacemagical.models.Space"/>
    </data>

    <RelativeLayout
        android:id="@+id/activity_space_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.spacemagical.spacemagical.activities.SpaceDetailActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:title="@{space.name, default=SPACE}"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="384dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:imageUrl="@{space.imageUrl}"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="description"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</layout>
